# Environment configuration for Node.js application
# Set the environment mode (development, production, etc.)
NODE_ENV=development
# Port for the server to listen on
PORT=3000

# Database connection settings
DB_USER=           # Database username
DB_PASSWORD=       # Database password
DB_HOST=           # Database host address
DB_PORT=           # Database port
DB_DATABASE=       # Database name

# JWT or app secret key for authentication
SECRET_KEY =

# Logging configuration
LOG_FORMAT = dev   # Log format (e.g., dev, combined)
LOG_DIR = ../logs  # Directory for log files

# CORS (Cross-Origin Resource Sharing) settings
ORIGIN = *         # Allowed origins (use * for all)
CREDENTIALS = true # Allow credentials (cookies, etc.)
MAX_SIZE_FILE_UPLOAD = 2097152 # Max file upload size in bytes (2MB)

# Rate limiting configuration (optional)
RATE_DELAY=1000    # Delay between requests in ms
RATE_LIMIT=100     # Max requests per time window

# Gmail SMTP server credentials for sending emails
GOOGLE_EMAIL=alifm2101@gmail.com      # Gmail address used for SMTP
GOOGLE_APP_PASSWORD=ipcn ncid bdzz vvuq # App password for Gmail SMTP

# AWS S3 configuration (optional, for file uploads)
AWS_ACCESS_KEY_ID=         # AWS access key ID
AWS_SECRET_ACCESS_KEY=+    # AWS secret access key
AWS_REGION=                # AWS region
AWS_S3_BUCKET=             # AWS S3 bucket name
